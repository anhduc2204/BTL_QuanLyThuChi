<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvHoatDong_muctieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Giải trí"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNgay_muctieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHoatDong_muctieu"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="10/2023"/>

            <TextView
                android:id="@+id/tvGhiChu_muctieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNgay_muctieu"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Ghi chú:"/>

            <TextView
                android:id="@+id/tvDuKien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@color/primary_color"
                android:text="Dự kiến: 200000"/>

            <TextView
                android:id="@+id/tvThucTe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDuKien"
                android:layout_alignStart="@+id/tvDuKien"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@color/primary_color"
                android:text="Thực tế: 250000"/>

            <TextView
                android:id="@+id/tv_id_muctieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>